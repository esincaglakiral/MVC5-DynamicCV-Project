@model MvcCv.Models.Entity.TblIletisimBilgi

@{
    ViewBag.Title = "IletisimEkle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h2 style="text-align: center; font-weight: bold; color: #343a40;">Yeni İletişim Bilgisi Ekleme Paneli</h2>
<br />
<a href="/iletisim/Index/" class="btn btn-primary" style="float: right;">Geri Dön</a>

<br />
<form method="post" class="form-group">

    <div class="form-outline mb-4">
        @Html.Label("Ad Soyad")
        @Html.TextBoxFor(model => model.AdSoyad, new { @class = "form-control", placeholder = "Lütfen ad ve soyad bilgilerinizi giriniz" })
        @Html.ValidationMessageFor(model => model.AdSoyad, "", new { @style = "color: red" })
    </div>

    <div class="form-outline mb-4">
        @Html.Label("Mail Adresi")
        @Html.TextBoxFor(model => model.Mail, new { @class = "form-control", placeholder = "Lütfen email adresinizi giriniz" })
        @Html.ValidationMessageFor(model => model.Mail, "", new { @style = "color: red" })
    </div>

    <div class="form-outline mb-4">
        @Html.Label("Konum")
        @Html.TextBoxFor(model => model.Konum, new { @class = "form-control", placeholder = "Lütfen konum bilgisini giriniz" })
        @Html.ValidationMessageFor(model => model.Konum, "", new { @style = "color: red" })
    </div>

    <div class="form-outline mb-4">
        @Html.Label("Telefon Numarası")
        @Html.TextBoxFor(model => model.Telefon, new { @class = "form-control", placeholder = "Lütfen telefon numaranızı giriniz" })
        @Html.ValidationMessageFor(model => model.Telefon, "", new { @style = "color: red" })
    </div>

 

    <button data-mdb-ripple-init class="btn btn-success btn-block mb-4">Yeni İletişim Bilgisini Kaydet</button>

</form>
