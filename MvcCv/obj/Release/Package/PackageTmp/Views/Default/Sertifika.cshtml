@using MvcCv.Models.Entity
@model List<TblSertifikalarim>


<div class="resume-section-content">
    <h2 class="mb-5">Kurslar & Sertifikalar</h2>
    @foreach (var item in Model)
    {
        <ul class="fa-ul mb-0">
            <li>
                <span class="fa-li"><i class="fas fa-trophy text-warning"></i></span>
                <p style="font-weight:bold; font-size: 20px;">@item.Aciklama</p>   
                <p class="mb-0" style="font-weight:600; font-size: 17px;">@item.KursAd</p>

                <p class="mb-0"><span style="font-weight:600; font-size: 15px;">Kullanılan Teknolojiler: </span>@item.Teknolojiler</p>

                <br />

            </li>

        </ul>
    }

</div>
